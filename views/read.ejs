<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>Read</title>
  </head>
  <body>
    <div class="container">
      <h3>Books List</h3>
      <% if (message) { %>
        
        <div class="alert alert-success" role="alert">
          <%- message %>
        </div>
        <% } %>
      
      <% rows.map(function(eachData) { %>
      <div class="card-deck">
        <div class="row">
          <div class="col-md-5">
            <div class="card mb-3">
              <div class="card-body text-center"> 
                <h5 class="card-title">Book Title : <%- eachData.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  Author Name: <%- eachData.name %>
                </h6>
                <p class="card-text">ISBN :<%- eachData.isbn %></p>
                <img src="/images/<%= eachData.image %>">
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    
  </body>
</html>
